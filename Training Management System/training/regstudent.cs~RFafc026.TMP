        public void filldata()
        {
            comboBox1.Items.Clear();
            cmd.CommandText = "select studentidno from studata";
            cmd.Connection = con;
            con.Open();
            SqlDataReader rd = cmd.ExecuteReader();
            while (rd.Read())
            {
                comboBox1.Items.Add(rd[0].ToString());
            }
            rd.Close();
            cmd.Dispose();
            con.Close();
        }

